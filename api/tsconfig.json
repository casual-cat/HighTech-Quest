{
  "compilerOptions": {
    /* Where TS lives and where JS goes */
    "rootDir": "src",
    "outDir": "dist",

    /* Language & module system */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* Safety & interop */
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  /* Only your src/ folder */
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
